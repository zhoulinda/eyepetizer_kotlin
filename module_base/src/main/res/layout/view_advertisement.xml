<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemData"
            type="com.linda.module_base.bean.ItemData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/cover"
            imageUrl="@{itemData.image}"
            roundedCorners="@{15}"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@{itemData.label.text}"
            android:textColor="@color/cl_ffffff"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="广告" />

        <ImageView
            android:id="@+id/portrait"
            imageUrl="@{itemData.header.icon}"
            roundedCorners="@{10}"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cover" />

        <TextView
            android:id="@+id/titleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="@{itemData.header.title}"
            android:textColor="@color/cl_000000"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/portrait"
            app:layout_constraintTop_toTopOf="@id/portrait"
            tools:text="宝格丽" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemData.header.description}"
            app:layout_constraintBottom_toBottomOf="@id/portrait"
            app:layout_constraintLeft_toLeftOf="@id/titleBar"
            tools:text="即可点击购买" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>