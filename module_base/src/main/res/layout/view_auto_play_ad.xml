<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemData"
            type="com.linda.module_base.bean.ItemData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/mSmartVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/cl_dddddd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mPreload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="WIFI预载"
            android:textColor="@color/cl_ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="静音"
            app:layout_constraintBottom_toBottomOf="@id/mPreload"
            app:layout_constraintLeft_toRightOf="@id/mPreload"
            app:layout_constraintTop_toTopOf="@id/mPreload" />

        <TextView
            android:id="@+id/advertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="广告"
            android:textColor="@color/cl_ffffff"
            app:layout_constraintBottom_toBottomOf="@id/mPreload"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/mPreload" />

        <ImageView
            android:id="@+id/portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:circleImageUrl="@{itemData.detail.icon}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mSmartVideoPlayer" />

        <TextView
            android:id="@+id/titleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@{itemData.detail.title}"
            android:textColor="@color/cl_000000"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/portrait"
            app:layout_constraintTop_toTopOf="@id/portrait"
            tools:text="标题" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@{itemData.detail.description}"
            android:textColor="@color/cl_aaaaaa"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/portrait"
            app:layout_constraintLeft_toRightOf="@id/portrait"
            tools:text="描述" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

