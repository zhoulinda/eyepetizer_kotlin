<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.linda.module_video_detail.model.VideoDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/detailBg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:imageUrl="@{viewModel.detailData.cover.blurred}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/videoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@{viewModel.detailData.title}"
                    android:textColor="@color/cl_ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tool:text="如何正确的消灭" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{viewModel.detailData.category}"
                    android:textColor="@color/cl_999999"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/videoTitle"
                    app:layout_constraintTop_toBottomOf="@id/videoTitle"
                    tool:text="#科技/开眼精选" />

                <TextView
                    android:id="@+id/videoBrief"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@{viewModel.detailData.description}"
                    android:textColor="@color/cl_aaaaaa"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toLeftOf="@id/videoTitle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category"
                    tool:text="建瓯市法的角度来副经理生死狙击建瓯市法的角度来副经理生死狙击建瓯市法的角度来副经理生死狙击建瓯市法的角度来副经理生死狙击建瓯市法的角度来副经理生死狙击" />

                <TextView
                    android:id="@+id/praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_action_like"
                    android:drawablePadding="5dp"
                    android:text="@{viewModel.detailData.consumption.collectionCount.toString()}"
                    android:textColor="@color/cl_ffffff"
                    app:layout_constraintLeft_toLeftOf="@id/videoTitle"
                    app:layout_constraintTop_toBottomOf="@id/videoBrief"
                    tool:text="100" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:drawableLeft="@drawable/ic_action_like"
                    android:drawablePadding="5dp"
                    android:text="@{viewModel.detailData.consumption.shareCount.toString()}"
                    android:textColor="@color/cl_ffffff"
                    app:layout_constraintBottom_toBottomOf="@id/praise"
                    app:layout_constraintLeft_toRightOf="@id/praise"
                    app:layout_constraintTop_toBottomOf="@id/videoBrief"
                    app:layout_constraintTop_toTopOf="@id/praise"
                    tool:text="100" />

                <TextView
                    android:id="@+id/cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:drawableLeft="@drawable/ic_action_like"
                    android:drawablePadding="5dp"
                    android:text="缓存"
                    android:textColor="@color/cl_ffffff"
                    app:layout_constraintBottom_toBottomOf="@id/praise"
                    app:layout_constraintLeft_toRightOf="@id/share"
                    app:layout_constraintTop_toBottomOf="@id/videoBrief"
                    app:layout_constraintTop_toTopOf="@id/praise" />

                <TextView
                    android:id="@+id/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:drawableLeft="@drawable/ic_action_like"
                    android:drawablePadding="5dp"
                    android:text="收藏"
                    android:textColor="@color/cl_ffffff"
                    app:layout_constraintBottom_toBottomOf="@id/praise"
                    app:layout_constraintLeft_toRightOf="@id/cache"
                    app:layout_constraintTop_toBottomOf="@id/videoBrief"
                    app:layout_constraintTop_toTopOf="@id/praise" />

                <ImageView
                    android:id="@+id/portrait"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_avatar"
                    app:circleCropImage="@{true}"
                    app:imageUrl="@{viewModel.detailData.author.icon}"
                    app:layout_constraintLeft_toLeftOf="@id/praise"
                    app:layout_constraintTop_toBottomOf="@id/praise" />

                <TextView
                    android:id="@+id/authorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="@{viewModel.detailData.author.name}"
                    android:textColor="@color/cl_ffffff"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toRightOf="@id/portrait"
                    app:layout_constraintTop_toTopOf="@id/portrait" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{viewModel.detailData.author.description}"
                    android:textColor="@color/cl_aaaaaa"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/portrait"
                    app:layout_constraintLeft_toLeftOf="@id/authorName"
                    app:layout_constraintRight_toLeftOf="@id/attention" />

                <TextView
                    android:id="@+id/attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/shape_bg_white_stroke_rect"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:text="+关注"
                    android:textColor="@color/cl_ffffff"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@id/portrait"
                    app:layout_constraintLeft_toRightOf="@id/description"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/portrait" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="@color/cl_aaaaaa"
                    app:layout_constraintTop_toBottomOf="@id/portrait" />

                <com.linda.module_base.view.RecyclerViewForScrollView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:overScrollMode="never"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line" />

                <TextView
                    android:id="@+id/lookMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> viewModel.showAllRelateVideos()}"
                    android:paddingTop="12dp"
                    android:paddingBottom="20dp"
                    android:text="查看更多"
                    android:textColor="@color/cl_ffffff"
                    android:visibility="@{viewModel.isShowMore()? View.VISIBLE:View.GONE}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerView" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cl_aaaaaa"
                    app:layout_constraintTop_toBottomOf="@id/lookMore" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/videoPlayer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>